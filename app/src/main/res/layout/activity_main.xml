<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Шпион"
        android:textSize="29sp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/spy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/text_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text_2"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/spy"
        />

    <TextView
        android:id="@+id/text_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/enter_btn"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="разоблачи своих друзей!"
        android:textSize="23sp"
        />

    <Button
        android:id="@+id/enter_btn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="30dp"
        android:text="Начать"
        android:textSize="21sp"
        />

    <ImageView
        android:id="@+id/image_message_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/image_message_1"
        app:layout_constraintStart_toStartOf="@id/spy"
        app:layout_constraintEnd_toEndOf="@id/spy"
        app:layout_constraintTop_toTopOf="@id/spy"
        app:layout_constraintBottom_toBottomOf="@id/spy"
        android:layout_margin="80dp"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/image_message_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/image_message_2"
        app:layout_constraintStart_toStartOf="@id/spy"
        app:layout_constraintEnd_toEndOf="@id/spy"
        app:layout_constraintTop_toTopOf="@id/spy"
        app:layout_constraintBottom_toBottomOf="@id/spy"
        android:layout_margin="80dp"
        android:visibility="gone"
    />




</androidx.constraintlayout.widget.ConstraintLayout>